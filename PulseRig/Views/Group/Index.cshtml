@model List<PulseRig.PresentationLayer.Models.GroupViewModel>
@{
    ViewData["Title"] = "Список групп";
}

<table class="table">
  <thead>
    <tr>
      <th scope="col">№</th>
      <th scope="col">Имя</th>
      <th scope="col">Описание</th>
      <th scope="col">Кол-во оборудований</th>
      <th scope="col">Действия</th>
    </tr>
  </thead>
  <tbody>
        @{
            var index = 1;
            foreach (var item in Model)
            {
                    <tr>
                      <th scope="row">@index</th>
                      <td>@item.Group.Name</td>
                      <td>@item.Group.Description</td>
                      <td>@item.Group.Equipments.Count</td>
                      <td></td>
                    </tr>
                index++;
            }
        }
  </tbody>
</table>